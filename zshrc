qGrepFunction() {
    grep -rI --exclude-dir=node_modules --exclude-dir=bower_components --exclude-dir=tmp $1 ~/Documents/Q2/{ngam-424/q2-uux/addon,addons}
}
alias qGrep=qGrepFunction

